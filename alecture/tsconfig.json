{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true, // 에러난 위치 찾아가기
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true, // 타입 체킹을 엄격하게 하는 것 
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { // import A from '../.../.../' 지저분한 경로 설정하기
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "layout/*": ["layout/*"],
      "pages/*": ["pages/*"],
      "utils/*": ["utils/*"],
      "typings/*": ["typings/*"]
    }
  }
}
